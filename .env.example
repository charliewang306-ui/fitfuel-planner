# FitMeal Environment Variables Example
# Copy this file to .env and fill in your actual values

# Database (automatically configured by Replit)
DATABASE_URL=postgresql://user:password@host:port/database
PGHOST=host
PGPORT=5432
PGUSER=user
PGPASSWORD=password
PGDATABASE=database

# OpenAI API (for AI suggestions, OCR, recipe parsing, and i18n translation)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Stripe Payment (for PRO subscriptions)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
TESTING_STRIPE_SECRET_KEY=sk_test_your-testing-stripe-key
VITE_STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
TESTING_VITE_STRIPE_PUBLIC_KEY=pk_test_your-testing-stripe-public-key

# Stripe Price IDs (for subscription plans)
# TODO: Replace with your actual Stripe Price IDs from dashboard
VITE_PRICE_PLUS_MONTHLY=price_test_plus_monthly_placeholder
VITE_PRICE_PLUS_YEARLY=price_test_plus_yearly_placeholder
VITE_PRICE_PRO_MONTHLY=price_test_pro_monthly_placeholder
VITE_PRICE_PRO_YEARLY=price_test_pro_yearly_placeholder

# USDA FoodData Central API (optional - for enhanced food database)
# Get your free API key at: https://fdc.nal.usda.gov/api-key-signup.html
# If not set, app will gracefully degrade to manual food entry
USDA_API_KEY=your-usda-api-key-here-or-leave-empty

# Feature Flags
# Set to 1 to enable experimental UI features (trends graph, new color palette)
# Set to 0 to disable for A/B testing or rollback
VITE_EXPERIMENTAL_UI=1

# Session Secret (for user sessions)
SESSION_SECRET=your-random-session-secret-here
